<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/dialog_background"
    android:layout_margin="16dp"
    android:elevation="8dp">

    <!-- Header Section -->
    <TextView
        android:id="@+id/tv_task_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Task Title"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#212121"
        android:layout_marginBottom="8dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        android:layout_marginBottom="12dp" />

    <!-- Description Section -->
    <TextView
        android:id="@+id/tv_task_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Task Description"
        android:textSize="14sp"
        android:textColor="#424242"
        android:layout_marginBottom="16dp"
        android:minHeight="40dp" />

    <!-- Details Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#F8F9FA"
        android:padding="12dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/tv_task_due_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Due Date: "
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_marginBottom="6dp"
            android:drawableStart="@android:drawable/ic_menu_recent_history"
            android:drawablePadding="8dp"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/tv_task_priority"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Priority: "
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_marginBottom="6dp"
            android:drawableStart="@android:drawable/ic_menu_agenda"
            android:drawablePadding="8dp"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/tv_task_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Category: "
            android:textSize="12sp"
            android:textColor="#666666"
            android:drawableStart="@android:drawable/ic_menu_sort_by_size"
            android:drawablePadding="8dp"
            android:gravity="center_vertical" />

    </LinearLayout>

    <!-- Action Buttons Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="12dp">

        <Button
            android:id="@+id/btn_mark_complete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Complete"
            android:layout_marginEnd="6dp"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            style="@style/Widget.Material3.Button" />

        <Button
            android:id="@+id/btn_mark_failed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Failed"
            android:layout_marginStart="6dp"
            android:backgroundTint="#F44336"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            style="@style/Widget.Material3.Button" />

    </LinearLayout>

    <!-- Secondary Buttons Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/btn_delete_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:layout_marginEnd="8dp"
            android:backgroundTint="#FF9800"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            style="@style/Widget.Material3.Button.OutlinedButton" />

        <Button
            android:id="@+id/btn_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:layout_marginEnd="8dp"
            android:backgroundTint="#2196F3"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            style="@style/Widget.Material3.Button.OutlinedButton" />

        <Button
            android:id="@+id/btn_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Close"
            android:backgroundTint="#757575"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            style="@style/Widget.Material3.Button.OutlinedButton" />

    </LinearLayout>

</LinearLayout>